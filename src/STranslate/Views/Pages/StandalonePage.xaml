<ui:Page
    x:Class="STranslate.Views.Pages.StandalonePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvt="clr-namespace:STranslate.Converters"
    xmlns:control="clr-namespace:STranslate.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:STranslate.ViewModels.Pages"
    Title="Standalone"
    d:DataContext="{d:DesignInstance Type=vm:StandaloneViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel Margin="20,10,20,12">
            <TextBlock Style="{DynamicResource STranslateTitleTextBlockStyle}" Text="{DynamicResource Standalone}" />

            <ui:AutoSuggestBox
                x:Name="PART_AutoSuggestBox"
                MinWidth="200"
                MaxWidth="500"
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                PlaceholderText="{DynamicResource SearchFunction}"
                ToolTip="{DynamicResource SearchFunctionToolTip}"
                ToolTipService.InitialShowDelay="200"
                ToolTipService.Placement="Top">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction
                            Command="{Binding TextChangedCommand}"
                            EventArgsConverter="{cnvt:EventArgsConverter}"
                            EventArgsConverterParameter="{Binding ElementName=PART_AutoSuggestBox}"
                            PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="SuggestionChosen">
                        <i:InvokeCommandAction
                            Command="{Binding SuggestionChosenCommand}"
                            EventArgsConverter="{cnvt:EventArgsConverter}"
                            EventArgsConverterParameter="{Binding ElementName=PART_AutoSuggestBox}"
                            PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="QuerySubmitted">
                        <i:InvokeCommandAction
                            Command="{Binding QuerySubmittedCommand}"
                            EventArgsConverter="{cnvt:EventArgsConverter}"
                            EventArgsConverterParameter="{Binding ElementName=PART_ScrollViewer}"
                            PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ui:AutoSuggestBox.QueryIcon>
                    <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.Search_20_Regular}" />
                </ui:AutoSuggestBox.QueryIcon>
            </ui:AutoSuggestBox>
        </DockPanel>

        <ui:ScrollViewerEx x:Name="PART_ScrollViewer" Grid.Row="1">
            <ikw:SimpleStackPanel Margin="20,10" Spacing="4">
                <!--#region 文本识别-->
                <TextBlock
                    Margin="0,8,0,4"
                    Style="{DynamicResource STranslateBodyStrongTextBlockStyle}"
                    Text="{DynamicResource Ocr}" />

                <ui:SettingsCard Description="{DynamicResource Standalone_OcrShowAnnotationDescription}" Header="{DynamicResource Standalone_OcrShowAnnotationHeader}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.ImageSplit_20_Regular}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ui:ToggleSwitch
                        IsOn="{Binding Settings.IsOcrShowingAnnotated}"
                        OffContent="{DynamicResource Disable}"
                        OnContent="{DynamicResource Enable}" />
                </ui:SettingsCard>

                <ui:SettingsCard Description="{DynamicResource Standalone_OcrShowTextControlDescription}" Header="{DynamicResource Standalone_OcrShowTextControlHeader}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.PanelRightContract_20_Regular}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ui:ToggleSwitch
                        IsOn="{Binding Settings.IsOcrShowingTextControl}"
                        OffContent="{DynamicResource Disable}"
                        OnContent="{DynamicResource Enable}" />
                </ui:SettingsCard>
                <!--#endregion-->

                <!--#region 图片翻译-->
                <TextBlock
                    Margin="0,16,0,4"
                    Style="{DynamicResource STranslateBodyStrongTextBlockStyle}"
                    Text="{DynamicResource ImageTranslate}" />

                <ui:SettingsCard Description="{DynamicResource Standalone_ImTranShowAnnotatedDescription}" Header="{DynamicResource Standalone_ImTranShowAnnotatedHeader}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.ImageSplit_20_Regular}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ui:ToggleSwitch
                        IsOn="{Binding Settings.IsImTranShowingAnnotated}"
                        OffContent="{DynamicResource Disable}"
                        OnContent="{DynamicResource Enable}" />
                </ui:SettingsCard>

                <ui:SettingsCard Description="{DynamicResource Standalone_ImTranShowTextControlDescription}" Header="{DynamicResource Standalone_ImTranShowTextControlHeader}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.PanelRightContract_20_Regular}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ui:ToggleSwitch
                        IsOn="{Binding Settings.IsImTranShowingTextControl}"
                        OffContent="{DynamicResource Disable}"
                        OnContent="{DynamicResource Enable}" />
                </ui:SettingsCard>

                <!--  高级设置  -->
                <ui:SettingsExpander Description="{DynamicResource Standalone_LayoutAnalysisDescription}" Header="{DynamicResource Standalone_LayoutAnalysisHeader}">
                    <ui:SettingsExpander.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.TableOffsetSettings_20_Regular}" />
                    </ui:SettingsExpander.HeaderIcon>
                    <ComboBox
                        DisplayMemberPath="Display"
                        ItemsSource="{Binding DataProvider.LayoutAnalysisModes}"
                        SelectedValue="{Binding Settings.LayoutAnalysisMode}"
                        SelectedValuePath="Value" />

                    <ui:SettingsExpander.Items>
                        <ui:SettingsCard Description="{DynamicResource Standalone_VerticalThresholdDescription}" Header="{DynamicResource Standalone_VerticalThresholdHeader}">
                            <ui:SettingsCard.HeaderIcon>
                                <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.CenterVertical_20_Regular}" />
                            </ui:SettingsCard.HeaderIcon>
                            <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="12">
                                <Slider
                                    IsSnapToTickEnabled="True"
                                    Maximum="6.0"
                                    Minimum="0.0"
                                    TickFrequency="0.1"
                                    Value="{Binding Settings.VerticalThresholdRatio}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="ValueChanged">
                                            <i:InvokeCommandAction Command="{Binding SliderValueChangedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Slider}}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Slider>
                                <TextBlock VerticalAlignment="Center" Text="{Binding Settings.VerticalThresholdRatio, StringFormat=F1}" />
                            </ikw:SimpleStackPanel>
                        </ui:SettingsCard>
                        <ui:SettingsCard Description="{DynamicResource Standalone_HorizontalThresholdDescription}" Header="{DynamicResource Standalone_HorizontalThresholdHeader}">
                            <ui:SettingsCard.HeaderIcon>
                                <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.CenterHorizontal_20_Regular}" />
                            </ui:SettingsCard.HeaderIcon>
                            <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="12">
                                <Slider
                                    IsSnapToTickEnabled="True"
                                    Maximum="6.0"
                                    Minimum="0.0"
                                    TickFrequency="0.1"
                                    Value="{Binding Settings.HorizontalThresholdRatio}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="ValueChanged">
                                            <i:InvokeCommandAction Command="{Binding SliderValueChangedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Slider}}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Slider>
                                <TextBlock VerticalAlignment="Center" Text="{Binding Settings.HorizontalThresholdRatio, StringFormat=F1}" />
                            </ikw:SimpleStackPanel>
                        </ui:SettingsCard>
                        <ui:SettingsCard Description="{DynamicResource Standalone_LineSpacingThresholdDescription}" Header="{DynamicResource Standalone_LineSpacingThresholdHeader}">
                            <ui:SettingsCard.HeaderIcon>
                                <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.TextLineSpacing_20_Regular}" />
                            </ui:SettingsCard.HeaderIcon>
                            <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="12">
                                <Slider
                                    IsSnapToTickEnabled="True"
                                    Maximum="3.0"
                                    Minimum="0.0"
                                    TickFrequency="0.1"
                                    Value="{Binding Settings.LineSpacingThresholdRatio}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="ValueChanged">
                                            <i:InvokeCommandAction Command="{Binding SliderValueChangedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Slider}}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Slider>
                                <TextBlock VerticalAlignment="Center" Text="{Binding Settings.LineSpacingThresholdRatio, StringFormat=F1}" />
                            </ikw:SimpleStackPanel>
                        </ui:SettingsCard>
                        <ui:SettingsCard Description="{DynamicResource Standalone_WordSpacingThresholdDescription}" Header="{DynamicResource Standalone_WordSpacingThresholdHeader}">
                            <ui:SettingsCard.HeaderIcon>
                                <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.TextWholeWord_20_Regular}" />
                            </ui:SettingsCard.HeaderIcon>
                            <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="12">
                                <Slider
                                    IsSnapToTickEnabled="True"
                                    Maximum="2.0"
                                    Minimum="0.0"
                                    TickFrequency="0.1"
                                    Value="{Binding Settings.WordSpacingThresholdRatio}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="ValueChanged">
                                            <i:InvokeCommandAction Command="{Binding SliderValueChangedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Slider}}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Slider>
                                <TextBlock VerticalAlignment="Center" Text="{Binding Settings.WordSpacingThresholdRatio, StringFormat=F1}" />
                            </ikw:SimpleStackPanel>
                        </ui:SettingsCard>
                    </ui:SettingsExpander.Items>
                </ui:SettingsExpander>
                <!--#endregion-->
            </ikw:SimpleStackPanel>
        </ui:ScrollViewerEx>
    </Grid>
</ui:Page>